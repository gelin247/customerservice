package br.edu.univas.si7.topicos.customer.entity;

import java.util.stream.Stream;

public enum CustomerType {
	LITER(10), KILOGRAM(20), METER(30);

	private int code;

	private Unit(int code) {
	this.code = code;
	}

	
	public static Unit getUnit(Integer code) {
		
		return Stream.of(Unit.values()).filter(t -> t.getCode() == code).findFirst()
				.orElseThrow(() -> new InvalidDataException("Invalid unit: " +

						code));
	}

	public int getCode() {
	return code;

	
	}
}

}
